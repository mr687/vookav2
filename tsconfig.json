{
	"compilerOptions": {
		"outDir": "build",
		"module": "commonjs",
		"target": "esnext",
		"moduleResolution": "node",
		"declaration": true,
		"strict": true,
		"resolveJsonModule": true,
		"lib": ["esnext", "esnext.asynciterable"],
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
