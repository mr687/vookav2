{
	"compilerOptions": {
		"outDir": "build",
		"module": "commonjs",
		"target": "esnext",
		"moduleResolution": "node",
		"declaration": false,
		"strict": true,
		"alwaysStrict": false,
		"strictNullChecks": false,
		"resolveJsonModule": true,
		"sourceMap": true,
		"lib": ["esnext", "esnext.asynciterable"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noImplicitAny": false,
		"noImplicitThis": false,
	},
	"include": ["src"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
